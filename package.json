{
  "name": "react-app-store-monorepo",
  "version": "1.0.0",
  "description": "React App Store - Monorepo with Gateway and Backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:gateway": "pnpm --filter gateway start:dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:all": "pnpm --parallel --filter './packages/*' dev",
    "build": "pnpm --filter './packages/*' build",
    "build:frontend": "pnpm --filter frontend build",
    "build:gateway": "pnpm --filter gateway build",
    "build:backend": "pnpm --filter backend build",
    "lint": "pnpm --filter './packages/*' lint",
    "type-check": "pnpm --filter './packages/*' type-check",
    "clean": "pnpm --filter './packages/*' clean && rm -rf node_modules"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
